<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance_heading">
        <item name="android:textColor">@color/heading_color</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance_subheading">
        <item name="android:textColor">@color/subheading_color</item>
        <item name="android:textSize">@dimen/subheading_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="TextAppearance_subheading_small">
        <item name="android:textColor">@color/subheading_color</item>
        <item name="android:textSize">@dimen/smallsubheading_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance_Switch">
        <item name="android:textColor">@color/subheading_color</item>
        <item name="android:textSize">@dimen/switch_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/margin_5dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="TextAppearance_Switch_small">
        <item name="android:textColor">@color/subheading_color</item>
        <item name="android:textSize">@dimen/subheading_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/margin_5dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="TextAppearance_smallsubheading">
        <item name="android:textColor">@color/smallsubheading_color</item>
        <item name="android:textSize">@dimen/smallsubheading_text_size</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="CardView_Reminder">
        <item name="cardBackgroundColor">?colorSurface</item>
        <item name="cardCornerRadius">@dimen/button_corner_8dp</item>
        <item name="cardElevation">@dimen/cardview_elevation</item>
        <item name="cardUseCompatPadding">true</item>

    </style>

    <style name="Round_Image">
        <item name="cornerSize">50%</item>
        <item name="cornerRadius">@dimen/card_img_size</item>
        <item name="strokeWidth">@dimen/card_stroke_radious</item>
        <item name="strokeColor">@color/md_theme_light_primary</item>
    </style>

    <style name="EditTextOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/TextInputLayout_Rounded</item>
        <item name="boxStrokeWidth">@dimen/border_1dp</item>
        <item name="boxStrokeColor">@color/stroke_color</item>
        <item name="boxStrokeErrorColor">?colorError</item>
        <item name="boxStrokeWidthFocused">@dimen/border_2dp</item>
        <item name="hintTextColor">@color/hint_Color_EditText</item>
        <item name="android:layout_margin">@dimen/margin_10dp</item>
        <item name="android:elevation">@dimen/margin_5dp</item>
    </style>

    <style name="EditText_Style_Normal" parent="TextAppearance.AppCompat">
        <item name="android:padding">@dimen/margin_15dp</item>
        <item name="cornerRadius">@dimen/button_corner_8dp</item>
        <item name="android:textColor">@color/heading_color</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:lines">1</item>
    </style>

    <style name="TextInputLayout_Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/button_corner_8dp</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">

        <item name="android:background">@drawable/radiobutton_background</item>
        <item name="buttonTint">?colorPrimary</item>
        <item name="android:paddingEnd">@dimen/margin_10dp</item>
        <item name="android:paddingStart">@dimen/margin_10dp</item>
        <item name="android:paddingTop">@dimen/margin_12dp</item>
        <item name="android:paddingBottom">@dimen/margin_12dp</item>
        <item name="android:textColor">@color/heading_color</item>
        <item name="android:button">@drawable/radiobutton_insert</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:elevation">@dimen/margin_5dp</item>

    </style>


    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipStrokeWidth">@dimen/border_1dp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/subheading_text_size</item>
        <item name="chipCornerRadius">@dimen/button_corner_8dp</item>
        <item name="android:elevation">@dimen/margin_3dp</item>
        <item name="chipStartPadding">@dimen/margin_10dp</item>
        <item name="chipEndPadding">@dimen/margin_10dp</item>
        <item name="android:layout_marginStart">@dimen/margin_5dp</item>
    </style>

    <style name="ChipStyleTheme" parent="ChipStyle">

        <item name="checkedIconTint">@color/chip_text_color</item>
        <item name="chipIconTint">@color/chip_text_color</item>
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="checkedIconEnabled">true</item>
        <item name="chipStartPadding">@dimen/margin_10dp</item>
        <item name="chipEndPadding">@dimen/margin_10dp</item>
        <item name="textEndPadding">@dimen/margin_10dp</item>
        <item name="chipIconVisible">true</item>

    </style>

    <style name="CardThemeColor">
        <item name="cardCornerRadius">@dimen/button_corner_8dp</item>
        <item name="cardElevation">@dimen/margin_5dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="strokeWidth">@dimen/card_stroke_radious</item>
        <item name="strokeColor">@color/color_unselect</item>
    </style>

    <style name="CardThemeSwitchButton">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardCornerRadius">@dimen/button_corner_8dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="strokeWidth">@dimen/border_1dp</item>
        <item name="strokeColor">@color/color_unselect</item>
    </style>

    <style name="StyleButton">
        <!--        <item name="strokeWidth">@dimen/border_2dp</item>-->
        <!--        <item name="strokeColor">?colorOnPrimary</item>-->
        <item name="cornerRadius">@dimen/button_corner_8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:padding">@dimen/margin_10dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_margin">@dimen/margin_10dp</item>
        <item name="android:textSize">@dimen/switch_text_size</item>
    </style>


    <style name="BottomSheetDialogtheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetstyle</item>

    </style>

    <style name="BottomSheetstyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>

    </style>


    <style name="shadow_style">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">@dimen/margin_10dp</item>
        <item name="android:padding">@dimen/border_2dp</item>
    </style>

    <style name="navbar_style">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">@dimen/margin_10dp</item>
        <item name="android:padding">@dimen/border_2dp</item>
    </style>


    <style name="round_image" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="round_profileimage" parent="">
        <item name="cornerSize">25%</item>
    </style>

    <style name="Card_View_Style">
        <item name="cardCornerRadius">@dimen/margin_10dp</item>
        <item name="cardElevation">@dimen/button_corner_8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Card_View_Style_Small">
        <item name="cardCornerRadius">@dimen/margin_10dp</item>
        <item name="cardElevation">@dimen/margin_5dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    <style name="barGrapButtons">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/margin_12dp</item>
        <item name="android:gravity">center|center_horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/margin_5dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginLeft">1dp</item>
    </style>

    <dimen name="cardview_corner">15dp</dimen>
    <dimen name="cardview_elevation">6dp</dimen>
    <dimen name="border_1dp">1dp</dimen>
    <dimen name="border_2dp">2dp</dimen>
    <dimen name="button_corner_8dp">15dp</dimen>
    <dimen name="margin_15dp">15dp</dimen>
    <dimen name="margin_12dp">12dp</dimen>
    <dimen name="chip_corner_40dp">40dp</dimen>
    <dimen name="margin_3dp">3dp</dimen>
</resources>